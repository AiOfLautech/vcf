<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile | Contact Gain</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #6366f1;
      --primary-light: #818cf8;
      --secondary: #10b981;
      --danger: #ef4444;
      --warning: #f59e0b;
      --info: #0ea5e9;
      --dark: #1e293b;
      --light: #f8fafc;
      --gray: #94a3b8;
      --card-bg: #ffffff;
      --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      background-color: #f1f5f9;
      color: #334155;
      min-height: 100vh;
      padding: 2rem;
    }

    .profile-container {
      max-width: 800px;
      margin: 0 auto;
      background: var(--card-bg);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
    }

    .profile-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      padding: 3rem 2rem 2rem;
      text-align: center;
      position: relative;
    }

    .profile-avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: white;
      margin: 0 auto 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      color: var(--primary);
      position: relative;
      border: 5px solid white;
    }

    .profile-avatar img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .online-status {
      position: absolute;
      bottom: 10px;
      right: 10px;
      width: 20px;
      height: 20px;
      background: var(--secondary);
      border-radius: 50%;
      border: 3px solid white;
    }

    .profile-name {
      font-size: 1.8rem;
      font-weight: 700;
      color: white;
      margin-bottom: 0.5rem;
    }

    .profile-username {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 1rem;
    }

    .admin-badge {
      display: inline-block;
      background: var(--info);
      color: white;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 500;
      margin-bottom: 1.5rem;
    }

    .profile-actions {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 1.5rem;
    }

    .profile-btn {
      padding: 0.8rem 1.5rem;
      border-radius: 30px;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .message-btn {
      background: white;
      color: var(--primary);
      border: none;
    }

    .message-btn:hover {
      background: rgba(255, 255, 255, 0.9);
    }

    .edit-btn {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: none;
    }

    .edit-btn:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .more-btn {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: none;
    }

    .more-btn:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .profile-body {
      padding: 2rem;
    }

    .section-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #e2e8f0;
    }

    .profile-details {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .detail-item {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
    }

    .detail-label {
      font-size: 0.9rem;
      color: var(--gray);
      margin-bottom: 0.5rem;
    }

    .detail-value {
      font-size: 1.1rem;
      font-weight: 500;
    }

    .bio-content {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
      line-height: 1.6;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
      margin-top: 2rem;
    }

    .stat-card {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
    }

    .stat-value {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      color: var(--gray);
    }

    @media (max-width: 768px) {
      .profile-header {
        padding: 2rem 1rem 1.5rem;
      }
      
      .profile-avatar {
        width: 100px;
        height: 100px;
        font-size: 2.5rem;
      }
      
      .profile-name {
        font-size: 1.5rem;
      }
      
      .profile-username {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="profile-container">
    <div class="profile-header">
      <div class="profile-avatar">
        <% if (profileUser.profile && profileUser.profile.profilePic) { %>
          <img src="<%= profileUser.profile.profilePic %>" alt="Profile">
        <% } else { %>
          <%= profileUser.username.charAt(0).toUpperCase() %>
        <% } %>
        <% if (profileUser.lastSeen > Date.now() - 300000) { %>
          <div class="online-status"></div>
        <% } %>
      </div>

      <div class="profile-name">
        <%= profileUser.profile?.name || profileUser.username %>
        <% if (profileUser.isAdmin) { %>
          <span class="admin-badge">
            <i class="fas fa-check-circle"></i> Admin
          </span>
        <% } %>
      </div>
      
      <div class="profile-username">
        @<%= profileUser.username %>
      </div>
      
      <div class="profile-actions">
        <div class="profile-btn message-btn" id="messageBtn">
          <i class="fas fa-envelope"></i> Message
        </div>
        <% if (currentUser._id.toString() === profileUser._id.toString()) { %>
          <div class="profile-btn edit-btn" id="editBtn">
            <i class="fas fa-edit"></i> Edit Profile
          </div>
        <% } else if (currentUser.isAdmin) { %>
          <div class="profile-btn more-btn" id="adminActions">
            <i class="fas fa-cog"></i> Admin Actions
          </div>
        <% } %>
      </div>
    </div>
    
    <div class="profile-body">
      <div class="section-title">Profile Information</div>
      
      <div class="profile-details">
        <div class="detail-item">
          <div class="detail-label">Full Name</div>
          <div class="detail-value"><%= profileUser.profile?.name || 'Not provided' %></div>
        </div>
        
        <div class="detail-item">
          <div class="detail-label">Phone Number</div>
          <div class="detail-value"><%= profileUser.profile?.phone || 'Not provided' %></div>
        </div>
        
        <div class="detail-item">
          <div class="detail-label">Status</div>
          <div class="detail-value">
            <span class="<%= profileUser.status === 'active' ? 'text-green-600' : profileUser.status === 'suspended' ? 'text-yellow-600' : 'text-red-600' %>">
              <%= profileUser.status.charAt(0).toUpperCase() + profileUser.status.slice(1) %>
            </span>
          </div>
        </div>
        
        <div class="detail-item">
          <div class="detail-label">Member Since</div>
          <div class="detail-value"><%= new Date(profileUser.createdAt).toLocaleDateString() %></div>
        </div>
      </div>
      
      <div class="section-title">Bio</div>
      <div class="bio-content">
        <%= profileUser.profile?.bio || 'No bio provided' %>
      </div>
      
      <div class="section-title">Statistics</div>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-value">24</div>
          <div class="stat-label">Sessions</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-value">312</div>
          <div class="stat-label">Contacts</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-value">78</div>
          <div class="stat-label">Downloads</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-value">1.2k</div>
          <div class="stat-label">Messages</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('messageBtn').addEventListener('click', () => {
      window.location.href = `/private-chat/<%= profileUser._id %>`;
    });

    const editBtn = document.getElementById('editBtn');
    if (editBtn) {
      editBtn.addEventListener('click', () => {
        window.location.href = '/edit-profile';
      });
    }
    
    const adminActions = document.getElementById('adminActions');
    if (adminActions) {
      adminActions.addEventListener('click', () => {
        const actions = [
          { 
            label: '<%= profileUser.status === 'suspended' ? 'Unsuspend User' : 'Suspend User' %>', 
            action: `/admin/<%= profileUser.status === 'suspended' ? 'unsuspend' : 'suspend' %>-user/<%= profileUser._id %>` 
          },
          { 
            label: '<%= profileUser.status === 'banned' ? 'Unban User' : 'Ban User' %>', 
            action: `/admin/<%= profileUser.status === 'banned' ? 'unban' : 'ban' %>-user/<%= profileUser._id %>` 
          },
          { 
            label: '<%= profileUser.isAdmin ? 'Demote from Admin' : 'Promote to Admin' %>', 
            action: `/admin/<%= profileUser.isAdmin ? 'demote' : 'promote' %>-user/<%= profileUser._id %>` 
          }
        ];
        
        let dropdown = document.createElement('div');
        dropdown.style.position = 'absolute';
        dropdown.style.backgroundColor = 'white';
        dropdown.style.borderRadius = '8px';
        dropdown.style.boxShadow = '0 4px 6px rgba(0,0,0,0.1)';
        dropdown.style.padding = '0.5rem';
        dropdown.style.zIndex = '100';
        
        actions.forEach(action => {
          const actionLink = document.createElement('a');
          actionLink.href = action.action;
          actionLink.style.display = 'block';
          actionLink.style.padding = '0.5rem 1rem';
          actionLink.style.color = 'var(--dark)';
          actionLink.style.textDecoration = 'none';
          actionLink.textContent = action.label;
          dropdown.appendChild(actionLink);
        });
        
        adminActions.parentNode.appendChild(dropdown);
        
        const rect = adminActions.getBoundingClientRect();
        dropdown.style.top = `${rect.bottom + window.scrollY}px`;
        dropdown.style.left = `${rect.left + window.scrollX}px`;
        
        document.addEventListener('click', (e) => {
          if (!dropdown.contains(e.target)) {
            dropdown.remove();
          }
        }, { once: true });
      });
    }
  </script>
</body>
</html>