<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat | Contact Gain</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f2f5;
            display: flex;
            height: 100vh;
        }
        .container {
            display: flex;
            width: 100%;
            height: 100%;
        }
        .sidebar {
            width: 300px;
            background-color: #ffffff;
            border-right: 1px solid #ddd;
            padding: 20px;
            overflow-y: auto;
        }
        .chat-area {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: #fff;
        }
        .messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }
        .message {
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 8px;
            max-width: 60%;
        }
        .message.sent {
            background-color: #dcf8c6;
            align-self: flex-end;
            margin-left: auto;
        }
        .message.received {
            background-color: #e9ecef;
        }
        .input-area {
            padding: 20px;
            border-top: 1px solid #ddd;
            display: flex;
            align-items: center;
        }
        .input-area input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 20px;
            margin-right: 10px;
        }
        .input-area button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }
        .input-area button:hover {
            background-color: #0056b3;
        }
        .member {
            display: flex;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
        .member.online .online-dot {
            width: 10px;
            height: 10px;
            background-color: #28a745;
            border-radius: 50%;
            margin-left: 10px;
        }
        .member-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .member-name {
            flex: 1;
            text-decoration: none;
            color: #333;
        }
        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: #007bff;
        }
        .group-info {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="group-info">
                <h2><%= group.name %></h2>
                <p><strong>Description:</strong> <%= group.description %></p>
                <p><strong>Members:</strong> <%= group.members.length %></p>
                <p><strong>Link:</strong> <span id="groupLink"><%= groupLink %></span></p>
                <button onclick="copyGroupLink()" class="action-btn"><i class="fas fa-copy"></i> Copy Link</button>
            </div>
            <div class="members-list">
                <% members.forEach(member => { %>
                    <div class="member <%= member.isOnline ? 'online' : '' %>">
                        <a href="/profile/<%= member._id %>"><img src="<%= member.profilePicture %>" class="member-pic" alt="<%= member.username %>"></a>
                        <a href="/profile/<%= member._id %>" class="member-name"><%= member.username %> <%= member.isAdmin ? '<i class="fas fa-check-circle verified"></i>' : '' %></a>
                        <span class="online-dot"></span>
                        <button onclick="startPrivateChat('<%= member._id %>')" class="action-btn"><i class="fas fa-envelope"></i></button>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="chat-area">
            <div class="messages">
                <% messages.forEach(message => { %>
                    <div class="message <%= message.sender._id.toString() === user._id.toString() ? 'sent' : 'received' %>">
                        <strong><%= message.sender.username %></strong>
                        <% if (message.replyTo) { %>
                            <blockquote>Replying to: <%= message.replyTo.content %></blockquote>
                        <% } %>
                        <p><%= message.content %></p>
                        <small><%= message.timestamp.toLocaleString() %></small>
                    </div>
                <% }); %>
            </div>
            <div class="input-area">
                <input type="text" id="messageInput" placeholder="Type a message...">
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const userId = '<%= user._id %>';

        socket.on('chatMessage', (message) => {
            const messagesDiv = document.querySelector('.messages');
            const messageDiv = document.createElement('div');
            messageDiv.classList.add('message', message.sender._id === userId ? 'sent' : 'received');
            messageDiv.innerHTML = `
                <strong>${message.sender.username}</strong>
                ${message.replyTo ? `<blockquote>Replying to: ${message.replyTo.content}</blockquote>` : ''}
                <p>${message.content}</p>
                <small>${new Date(message.timestamp).toLocaleString()}</small>
            `;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });

        socket.on('userStatus', (data) => {
            const memberDiv = document.querySelector(`.member a[href="/profile/${data.userId}"]`)?.parentElement;
            if (memberDiv) {
                memberDiv.classList.toggle('online', data.isOnline);
            }
        });

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const content = input.value.trim();
            if (content) {
                socket.emit('chatMessage', { content });
                input.value = '';
            }
        }

        function startPrivateChat(userId) {
            window.location.href = `/private-chat/${userId}`;
        }

        function copyGroupLink() {
            const link = document.getElementById('groupLink').textContent;
            navigator.clipboard.writeText(link).then(() => {
                alert('Link copied to clipboard!');
            });
        }

        document.getElementById('messageInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });
    </script>
</body>
</html>
