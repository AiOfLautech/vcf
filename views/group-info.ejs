<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group Info | Contact Gain</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #6366f1;
      --primary-light: #818cf8;
      --secondary: #10b981;
      --danger: #ef4444;
      --warning: #f59e0b;
      --info: #0ea5e9;
      --dark: #1e293b;
      --light: #f8fafc;
      --gray: #94a3b8;
      --card-bg: #ffffff;
      --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      background-color: #f1f5f9;
      color: #334155;
      min-height: 100vh;
      padding: 2rem;
    }

    .group-container {
      max-width: 800px;
      margin: 0 auto;
      background: var(--card-bg);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
    }

    .group-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      padding: 3rem 2rem 2rem;
      text-align: center;
      position: relative;
    }

    .group-avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: white;
      margin: 0 auto 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      color: var(--primary);
      position: relative;
      border: 5px solid white;
    }

    .group-avatar img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .group-name {
      font-size: 1.8rem;
      font-weight: 700;
      color: white;
      margin-bottom: 0.5rem;
    }

    .group-members {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 1rem;
    }

    .group-link-container {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
    }

    .group-link {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 30px;
      padding: 0.8rem 1.5rem;
      color: white;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .group-link:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .group-body {
      padding: 2rem;
    }

    .section-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #e2e8f0;
    }

    .group-description {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    .members-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
    }

    .member-card {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .member-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .member-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: var(--primary);
      margin: 0 auto 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 700;
      font-size: 1.5rem;
      position: relative;
    }

    .member-avatar img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .online-status {
      position: absolute;
      bottom: 5px;
      right: 5px;
      width: 15px;
      height: 15px;
      background: var(--secondary);
      border-radius: 50%;
      border: 2px solid white;
    }

    .member-name {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .member-username {
      font-size: 0.9rem;
      color: var(--gray);
      margin-bottom: 0.5rem;
    }

    .admin-badge {
      display: inline-block;
      background: rgba(14, 165, 233, 0.1);
      color: var(--info);
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .group-header {
        padding: 2rem 1rem 1.5rem;
      }
      
      .group-avatar {
        width: 100px;
        height: 100px;
      }
      
      .group-name {
        font-size: 1.5rem;
      }
      
      .members-grid {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      }
    }
  </style>
</head>
<body>
  <div class="group-container">
    <div class="group-header">
      <div class="group-avatar">
        <% if (group.profilePic) { %>
          <img src="<%= group.profilePic %>" alt="Group">
        <% } else { %>
          <i class="fas fa-users"></i>
        <% } %>
      </div>
      
      <div class="group-name"><%= group.name %></div>
      <div class="group-members"><%= group.members.length %> members</div>
      
      <div class="group-link-container">
        <a href="#" class="group-link" id="copyGroupLink">
          <i class="fas fa-link"></i> Copy Group Link
        </a>
      </div>
    </div>
    
    <div class="group-body">
      <div class="section-title">Group Description</div>
      <div class="group-description">
        <%= group.description || 'No description provided' %>
      </div>
      
      <div class="section-title">Group Members</div>
      <div class="members-grid">
        <% group.members.forEach(member => { %>
          <div class="member-card" onclick="window.location.href='/profile/<%= member._id %>'">
            <div class="member-avatar">
              <% if (member.profile && member.profile.profilePic) { %>
                <img src="<%= member.profile.profilePic %>" alt="Profile">
              <% } else { %>
                <%= member.username.charAt(0).toUpperCase() %>
              <% } %>
              <% if (member.lastSeen > Date.now() - 300000) { %>
                <div class="online-status"></div>
              <% } %>
            </div>
            <div class="member-name"><%= member.profile?.name || member.username %></div>
            <div class="member-username">@<%= member.username %></div>
            <% if (member.isAdmin) { %>
              <span class="admin-badge">
                <i class="fas fa-check-circle"></i> Admin
              </span>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('copyGroupLink').addEventListener('click', (e) => {
      e.preventDefault();
      const groupLink = `${window.location.origin}/group/<%= group._id %>`;
      
      navigator.clipboard.writeText(groupLink)
        .then(() => {
          const originalText = e.target.innerHTML;
          e.target.innerHTML = '<i class="fas fa-check"></i> Link Copied!';
          
          setTimeout(() => {
            e.target.innerHTML = originalText;
          }, 2000);
        })
        .catch(() => {
          alert('Could not copy link. Please copy manually.');
        });
    });
  </script>
</body>
</html>